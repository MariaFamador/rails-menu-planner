<div class='container'>
  <h1>Write a recipe</h1>

  <form>
    <div class="form-group">
      <label for="recipe-title">Title</label>
      <input type="text" class="form-control" placeholder="e.g. Baked Macaroni and Cheese">
    </div>

    <div class="form-group">
      <label for="recipe-category">Category</label>
      <select class='form-control form-control-lg'>
        <% Recipe::CATEGORIES.each do |c| %>
          <option value=<%="#{c}"%>><%= "#{c}" %></option>
        <% end %>
      </select>
    </div>
    
    <div class="form-group">
      <label for="recipe-ingredients">Ingredients</label>
      <div class="form-inline">
        <input type="text" class="form-control" placeholder="amount">
        <input type="text" class="form-control" placeholder="item">
      </div>
    </div>

    <div class="form-group">
      <label for="recipe-procedure">Procedure</label>
      <textarea type="text" class="form-control" placeholder="6. Serve while hot."></textarea>
    </div>

    <button class='btn btn-large btn-danger'>test this</button>
  </form>
</div>